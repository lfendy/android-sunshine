<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="@string/pref_key_location"
        android:title="@string/pref_title_location"
        android:defaultValue="@string/pref_default_location"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
    android:maxLines="1" />

    <ListPreference
        android:key="@string/pref_key_temperature_unit"
        android:title="@string/pref_title_temperature_unit"
        android:defaultValue="@string/pref_default_temperature_unit"
        android:entries="@array/pref_entries_temperature_unit"
        android:entryValues="@array/pref_entry_values_temperature_unit"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="2" />


</PreferenceScreen>
